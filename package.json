{
  "name": "tgvcbot-turborepo",
  "version": "0.0.0",
  "description": "Telegram Bot to Play Music in Voice Chat",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "format": "prettier --write \"apps/**/*.{ts,js}\"",
    "lint": "turbo run lint",
    "prepare": "husky install"
  },
  "author": {
    "email": "arnabxd@pm.me",
    "name": "Arnab XD"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@commitlint/config-conventional": "17.0.0",
    "commitlint": "17.0.0",
    "husky": "8.0.1",
    "lint-staged": "12.4.1",
    "prettier": "2.6.2",
    "turbo": "1.2.9",
    "eslint": "8.15.0",
    "eslint-config-prettier": "8.5.0"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@mdx-js/react",
        "webpack"
      ]
    }
  }
}